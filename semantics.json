[
  {
    "label": "Instruction",
    "name": "instruction",
    "type": "text",
    "default": "Enter instruction here",
    "description": "The instruction is displayed above the code snippet.",
    "optional": true,
    "widget": "html",
    "tags": [
      "h2",
      "h3",
      "h4",
      "h5",
      "h6",
      "p",
      "br",
      "strong",
      "em",
      "code"
    ]
  },
  {
    "label": "Code Snippet",
    "name": "codeSnippet",
    "type": "text",
    "default": "var x = 1;",
    "description": "The code will be displayed, executed and be editable.",
    "widget": "textarea"
  },
  {
    "name": "programmingLanguage",
    "type": "select",
    "label": "Programming Language",
    "description": "Select the Programming Language that is used in the example",
    "options": [
      {
        "value": "javascript",
        "label": "Javascript"
      },
      {
        "value": "python",
        "label": "Python"
      },
      {
        "value": "ruby",
        "label": "Ruby"
      },
      {
        "value": "cpp",
        "label": "C++"
      },
      {
        "value": "php",
        "label": "PHP"
      },
      {
        "value": "sql",
        "label": "SQL"
      }
    ],
    "default": "javascript"
  },
  {
    "label": "Display settings",
    "name": "displaySettings",
    "type": "group",
    "importance": "low",
    "fields": [
      {
        "label": "Snippet font",
        "name": "snippetFont",
        "type": "select",
        "description": "The font used to display the code snippet.",
        "options": [
          {
            "value": "monaco",
            "label": "Monaco"
          },
          {
            "value": "UbuntuMono",
            "label": "UbuntuMono"
          },
          {
            "value": "FiraCode, monospace",
            "label": "FiraCode"
          },
          {
            "value": "IBMPlexMon",
            "label": "IBMPlexMon"
          },
          {
            "value": "SourceCodePro",
            "label": "SourceCodePro"
          }
        ],
        "default": "monaco"
      },
      {
        "label": "Snippet width",
        "name": "snippetWidth",
        "type": "number",
        "default": "100",
        "description": "The CSS value of the snippet width.",
        "decimals": 0
      },
      {
        "label": "Snippet width unit",
        "name": "snippetWidthUnit",
        "type": "select",
        "description": "The CSS unit of value of the snippet width.",
        "options": [
          {
            "value": "%",
            "label": "%"
          },
          {
            "value": "px",
            "label": "px"
          },
          {
            "value": "em",
            "label": "em"
          }
        ],
        "default": "%"
      }
    ]
  }
]
